<script>
  window.fbAsyncInit = function() {
    FB.init({
      appId      : <%= ENV['APP_ID']%>,
      xfbml      : true,
      version    : 'v2.6'
    });
  };

  (function(d, s, id){
     var js, fjs = d.getElementsByTagName(s)[0];
     if (d.getElementById(id)) {return;}
     js = d.createElement(s); js.id = id;
     js.src = "//connect.facebook.net/en_US/sdk.js";
     fjs.parentNode.insertBefore(js, fjs);
   }(document, 'script', 'facebook-jssdk'));
</script>

<input type="text" value="customer number" id="customerNumber"/>
<button onclick="document.getElementById('fbplugin').setAttribute('data-ref', document.getElementById('customerNumber').value)">Change Customer Number</button>
